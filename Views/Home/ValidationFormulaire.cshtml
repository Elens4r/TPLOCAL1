@model TPLOCAL1.Models.FormModel

<head>
	<title>Page de validation</title>
	<link rel="stylesheet" href="~/resources/Index.css" />
</head>

<body>
	<header>
		<img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
		<h1>Formulaire TP HN avis</h1>
	</header>
	<nav>
		<ul>
			<li><a href="/Home/Index">Acceuil</a></li>
			<li><a href="#">Liste d'avis</a></li>
		</ul>
	</nav>
	<section>
		<p>Votre formulaire a bien été pris en compte</p>
			<table>
				<caption>Informations personelles</caption>
				<tr>
					<td>Nom</td>
					<td>
					@Html.DisplayFor(Model => Model.LastName)
					</td>
				</tr>
				<tr>
					<td>Prenom</td>
					<td>
					@Html.DisplayFor(Model => Model.FirstName)
					</td>
				</tr>
				<tr>
					<td>Genre</td>
					<td>
					@Html.DisplayFor(Model => Model.UserGender)
					</td>
				</tr>
				<tr>
					<td>Adresse</td>
					<td>
					@Html.DisplayFor(Model => Model.UserAdress)
					</td>
				</tr>
				<tr>
					<td>Code Postal</td>
					<td>
					@Html.DisplayFor(Model => Model.UserZipCode)
					</td>
				</tr>
				<tr>
					<td>Ville</td>
					<td>
					@Html.DisplayFor(Model => Model.UserTown)
					</td>
				</tr>
				<tr>
					<td>Adresse mail</td>
					<td>
					@Html.DisplayFor(Model => Model.UserEmail)
					</td>
				</tr>
			</table>
			<table>
				<caption>Informations sur la formation</caption>
				<tr>
					<td>Date de début de la formation</td>
					<td>
					@Html.DisplayFor(Model => Model.StartDate)
					</td>
				</tr>
				<tr>
					<td>Type de formation</td>
					<td>
					@Html.DisplayFor(Model => Model.CourseName)
					</td>
				</tr>
			</table>
			<table>
				<caption>Avis sur la formation</caption>
				<tr>
					<td>Formation Cobol</td>
					<td>
					@Html.DisplayFor(Model => Model.OpinionCobol)
					</td>
				</tr>
				<tr>
					<td>Formation C#</td>
					<td>
					@Html.DisplayFor(Model => Model.OpinionDotnet)
					</td>
				</tr>
			</table>
	</section>
</body>